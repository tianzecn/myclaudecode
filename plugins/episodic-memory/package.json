{
  "name": "episodic-memory",
  "version": "1.0.15",
  "description": "Semantic search for Claude Code conversations",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "episodic-memory": "./cli/episodic-memory.js",
    "episodic-memory-index": "./cli/index-conversations.js",
    "episodic-memory-search": "./cli/search-conversations",
    "episodic-memory-mcp-server": "./cli/mcp-server"
  },
  "scripts": {
    "build": "tsc && npm run bundle",
    "bundle": "esbuild src/mcp-server.ts --bundle --platform=node --format=esm --outfile=dist/mcp-server.js --external:fsevents --external:@anthropic-ai/claude-agent-sdk --external:sharp --external:onnxruntime-node --external:better-sqlite3 --external:@xenova/transformers --external:sqlite-vec",
    "postinstall": "npm rebuild better-sqlite3 2>/dev/null || true",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "claude-code",
    "conversations",
    "search",
    "semantic-search",
    "embeddings"
  ],
  "author": {
    "name": "Jesse Vincent",
    "email": "jesse@fsck.com"
  },
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.9",
    "@modelcontextprotocol/sdk": "^1.20.0",
    "@xenova/transformers": "^2.17.2",
    "better-sqlite3": "^12.4.1",
    "marked": "^16.4.0",
    "sqlite-vec": "^0.1.7-alpha.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/marked": "^5.0.2",
    "@types/node": "^24.7.0",
    "esbuild": "^0.25.11",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/obra/episodic-memory"
  },
  "homepage": "https://github.com/obra/episodic-memory"
}
