{
  "name": "claudeup",
  "version": "0.3.0",
  "description": "TUI tool for managing Claude Code plugins, MCPs, and configuration",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "claudeup": "bin/claudeup.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc -w",
    "start": "node dist/index.js",
    "start:bun": "bun run src/index.ts",
    "lint": "biome check src/",
    "format": "biome format --write src/",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "claude",
    "claude-code",
    "mcp",
    "plugins",
    "tui",
    "cli"
  ],
  "author": "Jack Rudenko <i@madappgang.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MadAppGang/claude-code.git",
    "directory": "tools/claudeup"
  },
  "bugs": {
    "url": "https://github.com/MadAppGang/claude-code/issues"
  },
  "homepage": "https://github.com/MadAppGang/claude-code/tree/main/tools/claudeup#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "bin"
  ],
  "dependencies": {
    "neo-blessed": "^0.2.0",
    "chalk": "^5.3.0",
    "fs-extra": "^11.2.0",
    "semver": "^7.6.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.9.0",
    "@types/semver": "^7.5.8",
    "typescript": "^5.6.3"
  }
}
